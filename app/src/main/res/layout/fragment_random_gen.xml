                android:id="@+id/one"
                android:layout_width="@dimen/card_dimension"
                android:layout_height="@dimen/card_dimension"
                android:layout_margin="@dimen/card_margin">

                <FrameLayout
                    android:id="@+id/back1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/back1_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:tint="#F44336"
                        android:src="@drawable/rectangle"/>

                    <TextView
                        android:id="@+id/back1_text"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="\?"
                        android:textColor="@color/colorCardText"
                        style="@style/Base.TextAppearance.AppCompat.Display1"
                        android:gravity="center"/>
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/front1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/front1_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:tint="#F44336"
                        android:src="@drawable/rectangle"/>

                    <TextView
                        android:id="@+id/front1_text"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="\?"
                        android:textColor="@color/colorCardText"
                        style="@style/Base.TextAppearance.AppCompat.Display1"
                        android:gravity="center"/>
